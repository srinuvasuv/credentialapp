<% if flash[:error] %>
<div style="width:100%; height:20px;background-color:#491E1E; color:white"><%= flash[:error]    %></div>
<% end %>
<div class="container">


	<div class="panel panel-default">
	  <div class="panel-heading">
      	Registration Form:
   	  </div>
   	  <div class="panel-body">
		<div class="row">
			<div class="col-xs-4">
			
			</div>
			<div class="col-xs-4">
			<div class="row">
			
	
<%=form_tag  register_path(),:method => 'get', :class => 'form', :multipart => 'true' do |f|   %>

	<div class="form-group">
					<label>Enter name</label>
	<%= text_field_tag 'name' , "", class: 'form-control',
 placeholder: 'Enter Name' %>                     <!-- <input
type="text" class="form-control"> -->
					
				</div>
				<div class="form-group">
					<label>Enter password</label>
					<%= password_field_tag 'password' , '',class: 'form-control',placeholder: 'Enter password' %>
					
					<!-- <input type="text" class="form-control"> -->
					
				</div>
				<div class="form-group">
					<label>Enter Email</label>
					<%= text_field_tag 'email', '',class: 'form-control', placeholder:'Enter email' %>
					
				</div>
				<div class="form-group">
					<label>Enter Phone Number</label>
					<%= text_field_tag 'phonenumber','',class: 'form-control', placeholder:'Enter phonenumber' %>
					
				</div>
				<div class="form-group">
					<label>Enter Address</label>
					<%= text_area_tag 'addr','',class: 'form-control', rows: 10, cols: 25 %>
					
				</div>
				<div class="form-group">
					<label>Gender</label>
					<%= radio_button_tag 'gender', 'male', class: 'form-control'%>Male
					<%= radio_button_tag 'gender', 'female', class: 'form-control' %>Female
					
				</div>
				<div class="form-group">
					<label>File upload</label>
					
					<%= file_field_tag 'picture', class: 'form-control' %>
					
				</div>
				<div class="form-group">
					
				<%= submit_tag 'Register Here',class: 'btn',name: 'regis' %>
					
				</div>

				<% end -%>
			

			</div>
			
		</div>
	</div>
		
			
		</div>
	</div>
	
</div>